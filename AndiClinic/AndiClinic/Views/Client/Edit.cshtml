
@{
    ViewData["Title"] = "Edit";
}

@model Client

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Client</h2>
            <hr />
        </div>
        <div class = "mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class = "mb-3">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" min="0"/>
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class = "mb-3">
            <label asp-for="Active" class="pe-3"></label>
            <input asp-for="Active" class="form-check-input" type="checkbox" value="True" checked/>
        </div>
        <div class = "mb-3">
            <label asp-for="Condition" class="pe-3">Client Condition</label>
            <select asp-for="Condition" id="exampleFormControlSelect1">
                <option>Critical</option>
                <option>Sick</option>
                <option>Average</option>
                <option>Good</option>
                <option>Healthy</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>
    </div>
</form>

