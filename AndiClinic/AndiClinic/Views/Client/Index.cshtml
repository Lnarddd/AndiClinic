@model IEnumerable<Client>

<div class="container text-center">
    <div class="row pt-4 pb-4">
        <div class="col-sm text-start">
            <h2>Clients</h2>
        </div>
        <div class="col-sm text-end">
        <a asp-controller="Client" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-square-fill ml-2"></i>
            Create New Client
        </a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Condition
            </th>
            <th>
                Active
            </th>
            <th>
                Last Date Updated
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
            {
                <tr>
                    <td width="70">
                    @obj.Name
                    </td>
                    <td width="10%">
                    @obj.Age
                    </td>
                    <td width="10%">
                    @obj.Condition        
                    </td>
                    <td width="10%">
                    @obj.Active
                    </td>
                    <td width="30%">
                    @obj.Date
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-controller="Client" asp-route-id="@obj.Id" class="btn btn-primary"> Edit </a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>